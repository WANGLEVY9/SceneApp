<?xml version="1.0" encoding="UTF-8"?>
<!-- Logback 配置文件：解决日志乱码 + 基础日志输出 -->
<configuration scan="true" scanPeriod="60 seconds">
    <!-- 定义日志输出格式（包含时间、线程、日志级别、类名、日志信息） -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>
    
    <!-- 定义日志存储路径（如果是 Windows 系统，路径用 / 或 \\；Linux 直接用 /） -->
    <property name="LOG_PATH" value="logs"/>

    <!-- 1. 控制台输出日志（解决日志乱码） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset> <!-- 关键：控制台日志编码为 UTF-8 -->
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 2. 文件输出日志（按天滚动，保留 30 天，避免日志文件过大） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 日志文件路径 + 文件名 -->
        <file>${LOG_PATH}/app.log</file>
        
        <!-- 滚动策略：按时间滚动（每天一个文件） -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 滚动后的日志文件名格式（app-2025-12-13.log） -->
            <fileNamePattern>${LOG_PATH}/app-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 日志保留天数（30 天） -->
            <maxHistory>30</maxHistory>
            <!-- 日志总大小限制（可选，防止磁盘占满） -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        
        <!-- 文件日志编码 + 格式 -->
        <encoder>
            <charset>UTF-8</charset> <!-- 文件日志编码为 UTF-8 -->
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 3. 根日志级别配置（INFO 级别：只输出 INFO 及以上级别日志，DEBUG 日志不会输出） -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/> <!-- 同时输出到控制台 -->
        <appender-ref ref="FILE"/>    <!-- 同时输出到文件 -->
    </root>

    <!-- 可选：单独配置某个包的日志级别（比如你的项目包 com.scene，输出 DEBUG 级别日志方便调试） -->
    <logger name="com.scene" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>
</configuration>